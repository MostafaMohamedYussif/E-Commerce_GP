@model List<Discount>

@{
    ViewData["Title"] = "Discounts";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 legend">Discounts List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div>
                <a asp-controller="Discount" asp-action="Create" class="btn btn-success rounded">
                    <i class="bi bi-plus-circle"></i> Create New Discount
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Discount Name
                    </th>
                    <th>
                        Discount Percent
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DiscountPercent %</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Discount" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 btn-sm rounded">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Discount" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 btn-sm rounded">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>