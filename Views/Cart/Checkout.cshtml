

@model ShoppingCart

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-background shadow-sm">
                <div class="card-body">
                    <h4 class="mb-3 text-center">Shipping Information</h4>
                    <div class="mb-2">
                        <i class="fas fa-map-marker-alt"></i> <strong>Street Info:</strong> @Model.ApplicationUser.Street
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-city"></i> <strong>City:</strong> @Model.ApplicationUser.City
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-building"></i> <strong>Building Number:</strong> @Model.ApplicationUser.Building_Number
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-layer-group"></i> <strong>Floor Number:</strong> @Model.ApplicationUser.Floor_Number
                    </div>

                    <hr />

                    <h4 class="mb-3">Order Summary</h4>
                    <div class="mb-2">
                        <strong>Your Total:</strong> @Model.Total<small>EGP</small>
                    </div>

                    <div class="text-center">
                        <a class="btn btn-outline-success mt-4 btn-md custom-btn rounded p-3" href="/Order/ConfirmOrder">
                            <i class="fas fa-check-circle"></i> Place Order
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
    /* custom.css */

    .card-background {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .card h4 {
        color: #343a40;
        margin-bottom: 1rem;
    }

    .card .mb-2 {
        font-size: 1.1rem;
    }

    .card .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .card .btn-primary:hover {
            background-color: #0056b3;
        }

</style>
}
